<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
               Title="Контроль Попапов"
               SetSize="300 400"
               Resizable="True">

    <BoxContainer Name="MainPage" HorizontalExpand="True" VerticalExpand="True">
        <BoxContainer HorizontalAlignment="Center" HorizontalExpand="True" VerticalAlignment="Center" Orientation="Vertical" MinSize="325 160">
            <Label Text="Выберите попап:"/>
            <BoxContainer HorizontalExpand="True" VerticalExpand="True" VerticalAlignment="Bottom" Orientation="Horizontal">
                <Button Name="PopupButton1" Text="Попап 1"/>
            </BoxContainer>
            <BoxContainer HorizontalExpand="True" VerticalExpand="True" VerticalAlignment="Bottom" Orientation="Horizontal">
                <Button Name="PopupButton2" Text="Попап 2"/>
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
